#include <main.h>
 #fuses XT, NOWDT, NOPROTECT, NOBROWNOUT,
NOLVP, NOPUT, NOWRT, NODEBUG

 #use delay(clock=4M)

void main()
 {
set_tris_b(0x00);
 set_tris_d(0x03);
 output_b(0);
 while(TRUE)
 {
if(input(pin_d0)==1){
 output_b(1);
 delay_ms(100);
 output_b(2);
 delay_ms(100);
 output_b(4);
 delay_ms(100);
 output_b(8);
 delay_ms(100);
 output_b(16);
 delay_ms(100);
 output_b(32);
 delay_ms(100);
 output_b(64);
 delay_ms(100);
 output_b(128);
 delay_ms(100);
 }
 }
 }
